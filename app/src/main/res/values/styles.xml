<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="TextAppearence.Hint" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">"sans-serif-condensed"</item>
    </style>

    <style name="TextAppearence.Error" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">"sans-serif-condensed"</item>
    </style>

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/TextAppearence.Hint</item>
        <item name="errorTextAppearance">@style/TextAppearence.Error</item>
    </style>

    <style name="TextViewBaseStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">"sans-serif-condensed"</item>
    </style>

    <style name="TextViewHintStyle" parent="TextViewBaseStyle">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <style name="TextViewUrlStyle" parent="TextViewHintStyle">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ButtonBase" parent="Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">"sans-serif-condensed"</item>
        <item name="android:background">@drawable/transparent_pressed_background</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/TextAppearance.DialogWindowTitle</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonBase</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonBase</item>
        <item name="buttonBarNeutralButtonStyle">@style/ButtonBase</item>
    </style>

    <style name="TextAppearance.DialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
